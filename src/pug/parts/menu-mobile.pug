.menu-mobile
    .container
        .row
            .col
                .menu-mobile-wrapper
                    a(href="#burger")
                        .menu-mobile-item.link-burger
                            p Бургеры
                    a(href="#sandwich")
                        .menu-mobile-item.link-sandwich
                            p Сендвичи
                    a(href="#snacks")
                        .menu-mobile-item.link-snacks
                            p Закуски
                    a(href="#sweets")
                        .menu-mobile-item.link-sweets
                            p Сладости
                    a(href="#drinks")
                        .menu-mobile-item.link-drinks
                            p Напитки
                    a(href="#breakfast")
                        .menu-mobile-item.link-breakfast
                            p Завтраки
.menu-mobile-bottom
    .menu-mobile-background
    .menu-mobile-sign
        .menu-mobile-sign-img
            img(src='./images/header/login.svg')
        .menu-mobile-sign-text
            span Войти
    .menu-mobile-cart
        .menu-mobile-cart-img
            img(src='./images/header/cart.svg')
        .menu-mobile-cart-text
            span Корзина &nbsp;
            span.bold 0 p.
            include ./auth.pug
        .menu-mobile-cart-text-open
            span Оформить заказ
    include ./cart.pug
